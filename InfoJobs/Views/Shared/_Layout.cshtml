<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoJobs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfoJobs.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
          integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">


</head>
<body>
    <header id="barra">
        <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/img/folio.png" alt="trabajitos.net" width="60" height="60">
                    Infojobs
                </a>
                <ul class="nav justify-content-center">
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="catalogo" asp-action="Index"><i class="bi bi-folder-fill"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="recursos" asp-action="Index"><i class="bi bi-bag-dash-fill"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" asp-area="" asp-controller="login" asp-action="Index">
                            Login in<i class="bi bi-box-arrow-in-right"></i>/ Sing up <i class="bi bi-box-arrow-in-left"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <section id="final">
        <footer>
            <div class="container-fluid p-4 text-light">
                <div class="row g-3">
                    <div class="col-6 col-lg-2 offset-lg-1 mb-3">
                        <h5 class="text-start fw-bold">
                            WORKSTATION
                        </h5>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="">Seccion</a>
                            </li>
                            <li class="mb-2">
                                <a href="">Seccion</a>
                            </li>
                            <li class="mb-2">
                                <a href="">Seccion</a>
                            </li>
                            <li class="mb-2">
                                <a href="">Seccion</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-6 col-lg-2 offset-lg-1 mb-3">
                        <h5 class="fw-bold text-start">REDES SOCIALES</h5>
                        <div class="d-flex justify-content-around p-2 h1 gap-3">
                            <i class="bi bi-facebook"></i>
                            <i class="bi bi-whatsapp"></i>
                            <i class="bi bi-instagram"></i>
                            <i class="bi bi-linkedin"></i>
                        </div>
                    </div>
                </div>
                <div class="text-center h4">
                    &copy; 2023 InfoJobs. --- Todos los derechos reservados ---
                </div>
            </div>
        </footer>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
